                    <button type="submit">logg ut</button>
            </form>
        </div>
        <div class="header__toggle-menu" onclick="toggleSidebar()">
            &#9776;
        </div>
    </div>
    <div class="layout">
        <aside class="sidebar" id="sidebar">
            <ul id="reportMenu" class="sidebar__menu">
