                <select id="projectFilterSelect" class="sidebar__filter-select" multiple="multiple">
                    <!-- Project options will be dynamically added here -->
                </select>
            </div>
            
            <div class="filter-container">
                <label for="monthYearRangePicker" class="sidebar__filter-label">Velg dato</label>
                <input type="text" id="monthYearRangePicker" class="date-range-picker">
            </div>
            
